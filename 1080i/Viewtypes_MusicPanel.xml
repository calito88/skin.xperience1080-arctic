<includes>
<!-- =============== -->
<!-- Music Panel (51)      -->
<!-- =============== -->
    <include name="Viewtype-MusicPanel">
        <control type="group">
            <visible>Control.IsVisible(51) + !Window.IsActive(musicinformation)</visible>
            <include>CommonViewAnimations</include>
            <include>BannerListAnimations</include>
            <include>OptionsShutdownAnimation</include>
            <include>listEndAnimation</include>
            <posx>127</posx>
			<posy>173</posy>
			<control type="image">
				<description>Glass</description>
				<posx>-15</posx>
				<posy>-15</posy>
				<width>1698</width>
				<height>744</height>
				<texture border="25">views/newgloss/border-glass.png</texture>
				<aspectratio>stretch</aspectratio>
				<colordiffuse>Mod_Panel_Glass</colordiffuse>
			</control> 

            <control type="image">
                <description>Cover</description>
                <posx>6</posx>
                <posy>6</posy>
                <width>702</width>
                <height>702</height>
                <texture background="true" diffuse="views/newgloss/music-diffuse-702.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
                <aspectratio scalediffuse="false">scale</aspectratio>
                <fadetime>200</fadetime>
            </control>
            <control type="image">
                <description>Cover</description>
                <posx>6</posx>
                <posy>6</posy>
                <width>702</width>
                <height>702</height>
                <texture background="true" diffuse="views/newgloss/music-diffuse-702.png">views/newgloss/gloss.png</texture>
                <aspectratio scalediffuse="false" align="right" aligny="top">keep</aspectratio>
            </control>
            <control type="image">
                <description>Border</description>
                <posx>-4</posx>
                <posy>-4</posy>
                <width>722</width>
                <height>722</height>
                <texture border="25">views/newgloss/border.png</texture>
                <aspectratio scalediffuse="false">stretch</aspectratio>
                <colordiffuse>Mod_Border</colordiffuse>
            </control>
            
            
            

            <control type="panel" id="51">
				<posx>710</posx>
				<posy>-4</posy>
				<width>952</width>
				<height>476</height>
                <include>FullscreenDimensions</include>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <orientation>horizontal</orientation>
                <viewtype label="Panel (Covers)">list</viewtype>
                <pagecontrol>70</pagecontrol>
                <ondown>70</ondown>
                <onright>51</onright>
                <onleft>51</onleft>
                <onup>51</onup>
                <preloaditems>2</preloaditems>
                <visible>Container.Content(albums) | Container.Content(artists)</visible>
                <itemlayout width="238" height="238">
                    <control type="image">
                        <description>Poster</description>
                        <posx>10</posx>
                        <posy>10</posy>
                        <width>226</width>
                        <height>226</height>
                        <texture background="true" diffuse="views/newgloss/musicwall-diffuse.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
                        <colordiffuse>ffcccccc</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <description>Gloss</description>
                        <posx>10</posx>
                        <posy>10</posy>
                        <width>226</width>
                        <height>226</height>
                        <texture background="true" diffuse="views/newgloss/musicwall-diffuse.png">views/newgloss/gloss.png</texture>
                        <colordiffuse>ffcccccc</colordiffuse>
                        <aspectratio scalediffuse="false" align="right" aligny="top">keep</aspectratio>
                    </control>
                    <control type="image">
                        <description>Border</description>
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>246</width>
                        <height>246</height>
                        <texture border="25">views/newgloss/border.png</texture>
                        <colordiffuse>Mod_Border_Fade</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                    <control type="image">
                        <description>Poster</description>
                        <posx>10</posx>
                        <posy>10</posy>
                        <width>226</width>
                        <height>226</height>
                        <texture>views/newgloss/musicwall-diffuse.png</texture>
                        <colordiffuse>Mod_Cover_Fade</colordiffuse>
                        <aspectratio>stretch</aspectratio>
                    </control>
                </itemlayout>
                <focusedlayout width="238" height="238">
                    <control type="button">
                        <visible>true</visible>
                        <onfocus>AlarmClock(cycletracklist,null,0:20,silent,loop)</onfocus>
                    </control>
                    <control type="group">
                        <animation effect="zoom" end="100" start="80" time="150" delay="50" center="auto">Focus</animation>
                        <control type="image">
							<description>Poster</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>226</width>
							<height>226</height>
							<texture background="true" diffuse="views/newgloss/musicwall-diffuse.png" fallback="views/fallbacks/DefaultAlbumCover.png/square-large.png">$VAR[WallPoster]</texture>
							<aspectratio>stretch</aspectratio>
						</control>
						<control type="image">
							<description>Gloss</description>
							<posx>10</posx>
							<posy>10</posy>
							<width>226</width>
							<height>226</height>
							<texture background="true" diffuse="views/newgloss/musicwall-diffuse.png">views/newgloss/gloss.png</texture>
							<aspectratio scalediffuse="false" align="right" aligny="top">keep</aspectratio>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>246</width>
							<height>246</height>
							<texture border="25">views/newgloss/border.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>Mod_Border</colordiffuse>
						</control>
						<control type="image">
							<description>Border</description>
							<posx>0</posx>
							<posy>0</posy>
							<width>246</width>
							<height>246</height>
							<texture border="25">views/newgloss/border-fo.png</texture>
							<aspectratio>stretch</aspectratio>
							<colordiffuse>ddffffff</colordiffuse>
						</control>
					</control>	
                </focusedlayout>
            </control>
			<control type="group">
				<posy>476</posy>
				<posx>714</posx>
				<control type="label">
					<posx>24</posx>
					<posy>30</posy>
					<width>690</width>
					<label>$INFO[ListItem.Album]</label>
					<font>Font-Alaska-S32-BL</font>
					<textcolor>Mod_Tags</textcolor>
					<scroll>false</scroll>
					<align>left</align>
					<visible>Container.Content(Albums)</visible>
				</control>
				<control type="label">
					<posx>24</posx>
					<posy>30</posy>
					<width min="50" max="690">auto</width>
					<label>$INFO[ListItem.Label]</label>
					<font>Font-Alaska-S32-BL</font>
					<textcolor>Mod_Tags</textcolor>
					<scroll>false</scroll>
					<align>left</align>
					<visible>!Container.Content(Albums)</visible>
				</control>
				<control type="group">
					<visible>![Container(51).OnNext | Container(51).OnPrevious] + Container.Content(Albums)</visible>
					<animation effect="fade" end="100" start="0" time="500" delay="0" reversible="false">Visible</animation>
					<control type="label">
						<description>Tracks</description>
						<posx>24</posx>
						<posy>74</posy>
						<width>330</width>
						<height>125</height>
						<label>$VAR[MusicTracklistVar]</label>
						<align>justify</align>
						<aligny>top</aligny>
						<textcolor>Mod_Tags_Light</textcolor>
						<font>Font-Alaska-S25-NC</font>
						<scroll>false</scroll>
						<wrapmultiline>false</wrapmultiline>
					</control>
					<control type="label">
						<description>Tracks Right</description>
						<posx>475</posx>
						<posy>74</posy>
						<width>330</width>
						<height>125</height>
						<label>$VAR[MusicTracklistAltVar]</label>
						<align>justify</align>
						<aligny>top</aligny>
						<textcolor>Mod_Tags_Light</textcolor>
						<font>Font-Alaska-S25-NC</font>
						<scroll>false</scroll>
						<wrapmultiline>false</wrapmultiline>
					</control>
					<control type="textbox">
						<description>Plot</description>
						<posx>24</posx>
						<posy>74</posy>
						<width>902</width>
						<height>145</height>
						<label>$VAR[MusicTracklistInfoVar]</label>
						<align>justify</align>
						<textcolor>Mod_Tags_Light</textcolor>
						<font>Font-Alaska-S25-NC</font>
					</control>
				</control>
				<control type="textbox">
					<posx>24</posx>
					<posy>74</posy>
					<width>902</width>
					<height>140</height>
					<label>$INFO[ListItem.Property(Artist_Description)]</label>
					<font>Font-Alaska-S25-NC</font>
					<textcolor>Mod_Tags_Light</textcolor>
					<align>justify</align>
					<autoscroll delay="13000" time="3000" repeat="13000" />
					<visible>!IsEmpty(ListItem.Property(Artist_Description)) + Container.Content(Artists)</visible>
				</control>
			</control>
			<!--Scrollbar-->
            <control type="group">
				<posx>740</posx>
				<posy>420r</posy>
                <control type="image">
                    <description>Scrollbar background (visible on focus)</description>
                    <width>900</width>
                    <height>6</height>
                    <texture border="6,3,6,3">views/other/scrollbar-h.png</texture>
                    <visible>Control.IsVisible(51) + Control.HasFocus(70)</visible>
                    <animation effect="fade" start="0" end="25" time="300" tween="sine" easing="inout">Visible</animation>
                    <animation effect="fade" start="25" end="0" time="300" tween="sine" easing="inout">Hidden</animation>
                </control>
                <control type="scrollbar" id="70">
                    <description>Scrollbar</description>
                    <height>6</height>
                    <width>900</width>
                    <orientation>horizontal</orientation>
                    <texturesliderbar border="6,3,6,3">views/other/scrollbar-h.png</texturesliderbar>
                    <texturesliderbarfocus border="6,3,6,3">views/other/scrollbar-h-fo.png</texturesliderbarfocus>
                    <showonepage>false</showonepage>
                    <onup>51</onup>
                    <ondown condition="!Skin.HasSetting(KioskMode)">9010</ondown>
                    <ondown condition="Skin.HasSetting(KioskMode)">51</ondown>
                    <animation effect="fade" start="40" end="0" time="300" tween="sine" easing="inout" condition="!Control.IsVisible(9772)">Conditional</animation>
                    <visible>Control.IsVisible(51)</visible>
                </control>
            </control>
        </control>
    </include>    
</includes>