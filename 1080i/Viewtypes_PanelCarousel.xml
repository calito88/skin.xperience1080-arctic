<includes>
<!-- =============== -->
<!-- Panel (503)      -->
<!-- =============== -->
    <include name="Viewtype-PanelCarousel">
        <control type="group">
            <visible>Control.IsVisible(503) + !Window.IsActive(movieinformation)</visible>
            <include>CommonViewAnimations</include>
            <include>OptionsShutdownAnimation</include>
            <control type="group">
            	<posy>240</posy>
				<animation effect="fade" start="0" end="100" time="400" delay="600" reversible="false">Visible</animation>
				<visible>!Container(503).OnNext + !Container(503).OnPrevious + !Container(503).Scrolling</visible>
				<control type="image">
					<description>Left Arrow</description>
					<posx>164</posx>
					<posy>0</posy>
					<width>48</width>
					<height>48</height>
					<texture background="true">dialogs/shutdown/left.png</texture>
					<aspectratio>keep</aspectratio>
					<animation effect="slide" end="-42, 305" time="400" condition="true">Conditional</animation>
					<colordiffuse>Mod_Tags</colordiffuse>
				</control>
				<control type="image">
					<description>Right Arrow</description>
					<posx>212r</posx>
					<posy>0</posy>
					<width>48</width>
					<height>48</height>
					<texture background="true">dialogs/shutdown/right.png</texture>
					<aspectratio>keep</aspectratio>
					<animation effect="slide" end="42, 305" time="400" condition="true">Conditional</animation>
					<colordiffuse>Mod_Tags</colordiffuse>
				</control>
			</control>
            <control type="wraplist" id="503">
				<posx>0</posx>
				<posy>170</posy>
				<width>1920</width>
				<height>800</height>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <orientation>horizontal</orientation>
                <viewtype label="Panel (Carousel)">list</viewtype>
                <onup>503</onup>
                <ondown condition="!Skin.HasSetting(KioskMode)">9010</ondown>
                <ondown condition="Skin.HasSetting(KioskMode)">503</ondown>
                <onleft>503</onleft>
                <onright>503</onright>
                <preloaditems>2</preloaditems>
                <itemlayout  width="1920" height="722">
                	<control type="group">
						<posx>286</posx>
						<animation type="Conditional" condition="true">
							<effect type="zoom" start="100" end="50" time="0" center="auto" />
						</animation>
						<animation effect="slide" start="0" end="280,32" condition="Container.Content(episodes)">Conditional</animation>
						<posy>15</posy>
						<control type="image">
							<description>Glass</description>
							<posx>-15</posx>
							<posy>-15</posy>
							<width>1374</width>
							<height>744</height>
							<texture border="25">views/newgloss/border-glass.png</texture>
							<aspectratio>stretch</aspectratio>
							<visible>!Skin.HasSetting(viewtypes.hidepanel)</visible>
							<colordiffuse>Mod_Panel_Glass</colordiffuse>
						</control>
						<control type="group">
							<control type="image">
								<description>Landscape</description>
								<posx>6</posx>
								<posy>6</posy>
								<width>828</width>
								<height>464</height>
								<texture background="true" diffuse="views/newgloss/panel-fanart-diffuse.png">$VAR[ListInfoLandscapeVar]</texture>
								<aspectratio scalediffuse="false">stretch</aspectratio>
								<fadetime>200</fadetime>
							</control>
							<control type="image">
								<posx>734</posx>
								<posy>6</posy>
								<width>100</width>
								<height>100</height>
								<aspect>keepaspect</aspect>
								<texture>$INFO[ListItem.Overlay,overlays/aeon/,]</texture>
								<visible>!IsEmpty(ListItem.Overlay)</visible>
							</control> 
							<control type="image">
								<description>Border</description>
								<posx>-4</posx>
								<posy>-4</posy>
								<width>848</width>
								<height>484</height>
								<texture border="25">views/newgloss/border.png</texture>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>Mod_Border</colordiffuse>
							</control> 
							<control type="group">
								<posy>476</posy>
								<control type="label">
									<posx>24</posx>
									<posy>30</posy>
									<width>790</width>
									<label>$INFO[ListItem.Label]</label>
									<font>Font-Condensed-S32-B</font>
									<textcolor>Mod_Tags</textcolor>
									<scroll>false</scroll>
									<align>left</align>
								</control>
								<control type="textbox">
									<posx>24</posx>
									<posy>74</posy>
									<width>790</width>
									<height>140</height>
									<label>$INFO[ListItem.Plot]</label>
									<font>Font-Alaska-S25-NC</font>
									<textcolor>Mod_Tags</textcolor>
									<align>justify</align>
									<autoscroll delay="13000" time="3000" repeat="13000" />
								</control>
							</control>
						</control>
						<control type="group">
							<posx>846</posx>
							<control type="image">
								<description>Poster</description>
								<posx>0</posx>
								<posy>6</posy>
								<width>492</width>
								<height>702</height>
								<texture background="true" diffuse="views/newgloss/panel-bigposter-diffuse.png">$VAR[WallPoster]</texture>
								<aspectratio>stretch</aspectratio>  
								<visible>!Container.Content(episodes)</visible>
							</control>
							<!-- GLOSS AND BORDER OVERLAY -->
							<control type="image">
								<description>Gloss</description>
								<posx>0</posx>
								<posy>6</posy>
								<width>492</width>
								<height>702</height>
								<texture diffuse="views/newgloss/panel-bigposter-diffuse.png">views/newgloss/gloss.png</texture>
								<aspectratio align="left" aligny="top" scalediffuse="false">keep</aspectratio>
								<visible>!Container.Content(episodes)</visible>
							</control>
							<control type="image">
								<description>Border</description>
								<posx>-10</posx>
								<posy>-4</posy>
								<width>512</width>
								<height>722</height>
								<texture border="25">views/newgloss/border.png</texture>
								<aspectratio>stretch</aspectratio>
								<visible>!Container.Content(episodes)</visible>
							</control> 
						</control>
					</control>
                </itemlayout>
                <focusedlayout width="1920" height="722">
					<control type="group">
						<animation effect="slide" start="0" end="280,32" condition="Container.Content(episodes)">Conditional</animation>
						<animation type="Focus" condition="Container(503).OnNext | Container(503).OnPrevious">
                            <effect type="zoom" start="50" end="100" time="350" tween="sine" easing="out" center="auto" />
                        </animation>
                        <animation type="Unfocus" condition="Container(503).OnNext | Container(503).OnPrevious">
                            <effect type="zoom" start="100" end="50" time="250" tween="sine" easing="out" center="auto" />
                        </animation>
						<posx>286</posx>
						<posy>15</posy>
						<control type="image">
							<description>Glass</description>
							<posx>-15</posx>
							<posy>-15</posy>
							<width>1374</width>
							<height>744</height>
							<texture border="25">views/newgloss/border-glass.png</texture>
							<aspectratio>stretch</aspectratio>
							<visible>!Skin.HasSetting(viewtypes.hidepanel)</visible>
							<colordiffuse>Mod_Panel_Glass</colordiffuse>
						</control>
						<control type="group">
							<control type="image">
								<description>Landscape</description>
								<posx>6</posx>
								<posy>6</posy>
								<width>828</width>
								<height>464</height>
								<texture background="true" diffuse="views/newgloss/panel-fanart-diffuse.png">$VAR[ListInfoLandscapeVar]</texture>
								<aspectratio scalediffuse="false">stretch</aspectratio>
								<fadetime>200</fadetime>
							</control>
							<control type="image">
								<posx>734</posx>
								<posy>6</posy>
								<width>100</width>
								<height>100</height>
								<aspect>keepaspect</aspect>
								<texture>$INFO[ListItem.Overlay,overlays/aeon/,]</texture>
								<visible>!IsEmpty(ListItem.Overlay)</visible>
							</control> 
							<control type="image">
								<description>Border</description>
								<posx>-4</posx>
								<posy>-4</posy>
								<width>848</width>
								<height>484</height>
								<texture border="25">views/newgloss/border.png</texture>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>Mod_Border</colordiffuse>
							</control> 
							<control type="group">
								<posy>472</posy>
								<control type="label">
									<posx>24</posx>
									<posy>30</posy>
									<width>790</width>
									<label>$INFO[ListItem.Label]</label>
									<font>Font-Alaska-S32-BL</font>
									<textcolor>Mod_Tags</textcolor>
									<scroll>false</scroll>
									<align>left</align>
								</control>
								<control type="textbox">
									<posx>24</posx>
									<posy>72</posy>
									<width>790</width>
									<height>147</height>
									<label>$INFO[ListItem.Plot]</label>
									<font>Font-Alaska-S25-NC</font>
									<textcolor>Mod_Tags</textcolor>
									<align>justify</align>
									<autoscroll delay="13000" time="3000" repeat="13000" />
								</control>
							</control>
						</control>
						<control type="group">
							<posx>846</posx>
							<control type="image">
								<description>Poster</description>
								<posx>0</posx>
								<posy>6</posy>
								<width>492</width>
								<height>702</height>
								<texture background="true" diffuse="views/newgloss/panel-bigposter-diffuse.png">$VAR[WallPoster]</texture>
								<aspectratio>stretch</aspectratio>
								<visible>!Container.Content(episodes)</visible> 
							</control>
							<!-- GLOSS AND BORDER OVERLAY -->
							<control type="image">
								<description>Gloss</description>
								<posx>0</posx>
								<posy>6</posy>
								<width>492</width>
								<height>702</height>
								<texture diffuse="views/newgloss/panel-bigposter-diffuse.png">views/newgloss/gloss.png</texture>
								<aspectratio align="left" aligny="top" scalediffuse="false">keep</aspectratio>
								<visible>!Container.Content(episodes)</visible> 
							</control>
							<control type="image">
								<description>Border</description>
								<posx>-10</posx>
								<posy>-4</posy>
								<width>512</width>
								<height>722</height>
								<texture border="25">views/newgloss/border.png</texture>
								<aspectratio>stretch</aspectratio>
								<visible>!Container.Content(episodes)</visible> 
								<colordiffuse>Mod_Border</colordiffuse>
							</control> 
						</control>
					</control>
                </focusedlayout>
            </control>
        </control>
    </include>    
</includes>