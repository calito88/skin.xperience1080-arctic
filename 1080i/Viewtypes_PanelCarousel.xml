            <control type="fixedlist" id="503">
				<posx>-310</posx>
				<posy>195</posy>
				<width>2500</width>
				<height>800</height>
                <scrolltime tween="cubic" easing="out">500</scrolltime>
                <orientation>horizontal</orientation>
                <viewtype label="Carousel">list</viewtype>
                <onup>503</onup>
                <ondown condition="!Skin.HasSetting(KioskMode)">9010</ondown>
                <ondown condition="Skin.HasSetting(KioskMode)">503</ondown>
                <onleft>503</onleft>
                <onright>503</onright>
                <preloaditems>2</preloaditems>
                <focusposition>1</focusposition>
                <itemlayout  width="848" height="722" >
                	<control type="group">
						<animation type="Conditional" condition="true">
							<effect type="zoom" start="100" end="50" time="0" center="auto" />
						</animation>
						<control type="group">
							<control type="image">
								<description>Landscape</description>
								<posx>10</posx>
								<posy>10</posy>
								<width>828</width>
								<height>464</height>
								<texture background="true" diffuse="arctic/reel/fanart-big.png">$VAR[ListInfoLandscapeVar]</texture>
								<aspectratio scalediffuse="false">stretch</aspectratio>
								<fadetime>200</fadetime>
							</control>
							<control type="image">
								<posx>738</posx>
								<posy>10</posy>
								<width>100</width>
								<height>100</height>
								<aspect>keepaspect</aspect>
								<include>overlay.visibility</include>
								<visible>!IsEmpty(ListItem.Overlay)</visible>
							</control> 
							<control type="image">
								<posx>10</posx>
								<posy>10</posy>
								<width>828</width>
								<height>464</height>
								<texture border="25">arctic/common/glass-ring.png</texture>
								<visible>Skin.HasSetting(covers.showglass)</visible>
							</control>
							<control type="image">
								<description>Border</description>
								<posx>0</posx>
								<posy>0</posy>
								<width>848</width>
								<height>484</height>
								<texture border="25">arctic/common/border.png</texture>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>Mod_Border</colordiffuse>
							</control> 
							<control type="group">
								<posy>472</posy>
								<control type="label">
									<posx>28</posx>
									<posy>30</posy>
									<width>790</width>
									<label>$INFO[ListItem.Label]</label>
									<font>Font-Alaska-S32-BL</font>
									<textcolor>Mod_Tags</textcolor>
									<scroll>false</scroll>
									<align>left</align>
								</control>
							</control>
						</control>
					</control>
                </itemlayout>
                <focusedlayout width="848" height="722">
					<control type="group">
						<animation type="Focus" condition="Container(503).OnNext | Container(503).OnPrevious">
                            <effect type="zoom" start="50" end="100" time="350" tween="sine" easing="out" center="auto" />
                        </animation>
                        <animation type="Unfocus" condition="Container(503).OnNext | Container(503).OnPrevious">
                            <effect type="zoom" start="100" end="50" time="250" tween="sine" easing="out" center="auto" />
                        </animation>
						<control type="group">
							<control type="image">
								<description>Landscape</description>
								<posx>10</posx>
								<posy>10</posy>
								<width>828</width>
								<height>464</height>
								<texture background="true" diffuse="arctic/reel/fanart-big.png">$VAR[ListInfoLandscapeVar]</texture>
								<aspectratio scalediffuse="false">stretch</aspectratio>
								<fadetime>200</fadetime>
							</control>
							<control type="image">
								<posx>738</posx>
								<posy>10</posy>
								<width>100</width>
								<height>100</height>
								<aspect>keepaspect</aspect>
								<include>overlay.visibility</include>
								<visible>!IsEmpty(ListItem.Overlay)</visible>
							</control> 
							<control type="image">
								<posx>10</posx>
								<posy>10</posy>
								<width>828</width>
								<height>464</height>
								<texture border="25">arctic/common/glass-ring.png</texture>
								<visible>Skin.HasSetting(covers.showglass)</visible>
							</control>
							<control type="image">
								<description>Border</description>
								<posx>0</posx>
								<posy>0</posy>
								<width>848</width>
								<height>484</height>
								<texture border="25">arctic/common/border.png</texture>
								<aspectratio>stretch</aspectratio>
								<colordiffuse>Mod_Border</colordiffuse>
							</control> 
							<control type="group">
								<posy>472</posy>
								
								<control type="label">
									<posx>28</posx>
									<posy>30</posy>
									<width>790</width>
									<label>$INFO[ListItem.Label]</label>
									<font>Font-Alaska-S32-BL</font>
									<textcolor>Mod_Tags</textcolor>
									<scroll>false</scroll>
									<align>left</align>
								</control>
								<control type="textbox">
									<posx>28</posx>
									<posy>72</posy>
									<width>790</width>
									<height>147</height>
									<label>$INFO[ListItem.Plot]</label>
									<font>Font-Alaska-S25-NC</font>
									<textcolor>Mod_Tags</textcolor>
									<align>justify</align>
									<autoscroll delay="13000" time="3000" repeat="13000" />
									<animation type="Unfocus" condition="Container(503).OnNext | Container(503).OnPrevious">
										<effect type="fade" start="100" end="0" time="250" tween="sine" easing="out" center="auto" />
									</animation>
								</control>
							</control>
						</control>
					</control>
                </focusedlayout>
            </control>
        </control>
